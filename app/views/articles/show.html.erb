<div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="card p-3 rounded-4" style="width: 500px">
        <div class="card-body">
            <h1 class="display-1 text-center"><strong><%= @article.title %></strong></h1>
            <p class="display-6">-<%= @article.body %></p>
            <div class="text-center" style="display: flex; justify-content: center;">
                <p style="margin-right: 10px;"><%= link_to "Edit", edit_article_path(@article), class:"btn btn-dark" %></p>
                <p><%= link_to "Destroy", article_path(@article), data: { turbo_method: :delete }, class:"btn btn-dark" %></p>
            </div>

            <div class="text-center">
                <a href="/" class="btn btn-primary mt-3">
                HOME
                </a>
            </div>
        </div>
    </div>
</div>